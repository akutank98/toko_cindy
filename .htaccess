<files .htaccess> 
order allow, deny 
deny from all 
</files>

DirectoryIndex index.php

<IfModule mod_rewrite.c>

RewriteEngine on
RewriteCond $1 !^(index\.php|images|css|js|robots\.txt|favicon\.ico)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ ./index.php?/$1 [L,QSA]

</IfModule>